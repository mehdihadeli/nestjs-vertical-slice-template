{
  "name": "nestjs-vertical-slice-template",
  "version": "1.0.0",
  "engines": {
    "node": ">=22.x",
    "pnpm": ">=10.x"
  },
  "scripts": {
    "prepare": "husky",
    "install-dev-cert-bash": "curl -sSL https://aka.ms/getvsdbgsh | bash /dev/stdin -v vs2019 -l ~/vsdbg",
    "dev": "concurrently \"pnpm:dev:backend\" \"pnpm:dev:frontend\"",
    "dev:backend": "cd backend && pnpm run start:dev",
    "debug:backend": "cd backend && pnpm run start:debug",
    "dev:frontend": "cd apps/frontend && pnpm run dev",
    "debug:frontend": "cd apps/frontend && pnpm run debug",
    "format:backend": "cd backend && pnpm run format",
    "format:check:backend": "cd backend && pnpm run format:check",
    "format": "concurrently \"pnpm:format:backend\"",
    "format:check": "concurrently \"pnpm:format:check:backend\"",
    "lint:fix:backend": "cd backend && pnpm run lint:fix",
    "lint:backend": "cd backend && pnpm run lint",
    "lint:fix": "concurrently \"pnpm:lint:fix:backend\"",
    "lint": "concurrently \"pnpm:lint:backend\"",
    "install:backend": "cd backend && pnpm install",
    "install:dependencies": "pnpm install && pnpm install:backend",
    "test:unit:backend": "cd backend && pnpm run test:unit",
    "test:integration:backend": "cd backend && pnpm run test:integration",
    "test:e2e:backend": "cd backend && pnpm run test:e2e",
    "test:cov:backend": "cd backend && pnpm run test:cov",
    "test:unit": "concurrently \"pnpm:test:unit:backend\"",
    "test:integration": "concurrently \"pnpm:test:integration:backend\"",
    "test:e2e": "concurrently \"pnpm:test:e2e:backend\"",
    "test:cov": "concurrently \"pnpm:test:cov:backend\"",
    "build-backend": "cd backend && pnpm run build",
    "build": "concurrently \"pnpm:build-backend\""
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "cspell": "^8.14.2",
    "husky": "^9.1.6"
  },
  "dependencies": {
    "concurrently": "^9.2.1"
  }
}
