  "version": "0.2.0",
  "configurations": [
    {
      "name": "Start:Dev",
      "request": "launch",
      "runtimeArgs": [
        "run-script",
        "start:dev"
      ],
      "cwd": "${workspaceFolder}/backend",
      "runtimeExecutable": "npm",
      "env": {
        "NODE_ENV": "development"
      },
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node",
      "sourceMaps": true
    }
  ]
}